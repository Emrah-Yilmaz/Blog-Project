@model EntityLayer.Concrete.Writer
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<section class="main-content-w3layouts-agileits">
		<div class="container">
				<h3 class="tittle">Giriş Sayfası</h3>
				<div class="row inner-sec">
					<div class="login p-5 bg-light mx-auto mw-100">

			@using (Html.BeginForm("Index","Login",FormMethod.Post))
			{

				@Html.Label("Mail Adresiniz")
				@Html.TextBoxFor(x => x.WriterMail, new{@class="form-control", @id="exampleInputEmail1", @placeholder="example@gmail.com", @required=""})
				<small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
				
				@Html.Label("Şifreniz")
				@Html.TextBoxFor(x => x.WriterPassword, new{@class="form-control", @id="exampleInputEmail1", @placeholder="********", @required=""})
				
				<button type="submit" class="btn btn-primary submit mb-4">Giriş Yap</button>
				<h2>@ViewBag.p</h2>
				<p><a href="/Register/Index/"> Don't have an account?</a></p>

			}



