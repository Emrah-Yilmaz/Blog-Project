@model EntityLayer.Concrete.Writer


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>


<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Yazar Ekibimize Katıl </h3>
        <div class="inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">

                @using (Html.BeginForm("Index", "Register", FormMethod.Post))
                {


                    <div class="form-row">
                        <div class="col-md-6 mb-3">
                            @Html.Label("Ad Soyad")
                            @Html.TextBoxFor(x => x.WriterName, new{@class="form-control", @placeholder="Adınız..."})
                            @Html.ValidationMessageFor(x => x.WriterName,"",new{@class="text-danger"})
                        </div>
                        <div class="col-md-6 mb-3">
                        @Html.Label("Mail Adresi")
                        @Html.TextBoxFor(x => x.WriterMail, new{@class="form-control", @placeholder="ornek@gmail.com"})
                        @Html.ValidationMessageFor(x => x.WriterMail,"", new{@class="text-danger"})
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                        @Html.Label("Şifreniz") 
                        @Html.TextBoxFor(x => x.WriterPassword, new{@class="form-control", @placeholder="**************", Type="password"})
                        @Html.ValidationMessageFor(x => x.WriterPassword,"",new{@class="text-danger"})
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary submit mb-4">Kayıt Ol!</button>
                    <p>
                        <a href="#" id="btn1">Tüm şartları okudum ve kabul ediyorum</a>
                    </p>
                }
            </div>
        </div>
    </div>
</section>
<script>
    $('#btn1').click( function(){
    swal("Hello world!");

    });
</script>
