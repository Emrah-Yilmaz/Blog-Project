@model CoreDemo.Models.AddProfileImage
@{
    ViewData["Title"] = "AddWriterImage";
    Layout = "~/Views/Shared/_LayoutWriter.cshtml";
}

<h1>AddWriterImage</h1>

<form class="form-group" method="post" enctype="multipart/form-data">
    
        <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">

                    <div class="form-group">
                        <label for="exampleInputName1">Ad-Soyad</label>
                        @Html.TextBoxFor(x  => x.WriterName, new{@class="form-control"})
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Mail Adresi</label>
                         @Html.TextBoxFor(x => x.WriterMail, new{@class="form-control", @type="email"})
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Şifre</label>
                        @Html.TextBoxFor(x => x.WriterPassword, new{@class="form-control", @type="password"})
                    </div>

                    <div class="form-group">
                        <label>Profil Resmi</label>
                      <input type="file" value="Seç" name="WriterImage"/>
                    </div>

                    <div class="form-group">
                        <label for="exampleTextarea1">Textarea</label>
                        @Html.TextAreaFor(x => x.WriterAbout, new{@class="form-control"})
                    </div>

                    <button type="submit" class="btn btn-gradient-primary mr-2">Bilgileri Güncelle</button>
                    <button class="btn btn-light">Vazgeç</button>
                           
                </div>
        </div>
    </div>
</form>